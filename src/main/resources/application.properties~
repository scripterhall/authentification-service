server.port = 8987
spring.application.name = authentification-service
spring.config.import=optional:configserver:http://localhost:8888

# Autoriser les origines spécifiques
spring.webflux.cors.allowed-origins=http://example.com

# Autoriser les méthodes HTTP spécifiques
spring.webflux.cors.allowed-methods=GET, POST, PUT, DELETE

# Autoriser les en-têtes spécifiques
spring.webflux.cors.allowed-headers=Authorization, Content-Type

# Autoriser les en-têtes exposés
spring.webflux.cors.exposed-headers=Authorization

# Activer le support CORS
spring.webflux.cors.max-age=3600

